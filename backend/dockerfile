# 使用 Python 3.12-slim 作为基础镜像
FROM python:3.12-slim


# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DJANGO_SETTINGS_MODULE=blog_project.settings

# 在构建时挂载本地缓存目录，避免每次重新下载 apt 依赖
RUN --mount=type=bind,source=/var/cache/apt/archives,target=/var/cache/apt/archives \
    apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    default-libmysqlclient-dev \
    && apt-get clean

# 复制项目依赖
COPY requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install gunicorn

# 复制项目文件
COPY . .

# 暴露端口
EXPOSE 8000

# 启动命令
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "blog_project.wsgi:application"]
